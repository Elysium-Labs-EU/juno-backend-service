{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021.String"], // Added for the replaceAll function
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node"],
    "useUnknownInCatchVariables": false // TypeScript 4.4+ only!
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
