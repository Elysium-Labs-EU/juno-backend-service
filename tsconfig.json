{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "/",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
    "resolveJsonModule": true,
    "lib": ["ES2021.String"] // Added for the replaceAll function
  },
  "lib": ["es2015"],
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
